#include <iostream>
using namespace std;
int oddplace(int n){
    int ans=1;
    while(n-1){
        ans+=2;
		n--;
    }
    return ans-2;
}
int main() {
	// your code goes here
	int n ;
	cin>>n;
	for(int i=n;i>1;i--){
		//aage ki lines
		for(int j=n;j>=i;j--){
			cout<<"| ";
		}

		// numbers 
	    for(int j = 0;j<oddplace(i);j++){
	        cout<<i<<" ";
	    }
		//piche ki line
		for(int j=n;j>=i;j--){
			cout<<"| ";
		}
	    cout<<endl;
	}

	////// sheeshaa //// 

	for(int i = n-1;i>0;i--){
		cout<<"| ";
	}
	cout<<"1 ";
	for(int i = n-1;i>0;i--){
		cout<<"| ";
	}
	cout<<endl;

	////////////////////////////

	for(int i=2;i<=n;i++){

		for(int j = n;j>=i;j--){
			cout<<"| ";
		}
		// numbers 
		for(int j=1;j<=oddplace(i);j++){
			cout<<i<<" ";
		}

		for(int j = n;j>=i;j--){
			cout<<"| ";
		}

		cout<<endl;
	}
	return 0;
}
