#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    for(int i=n;i>0;i--){
        for(int k = n;k>i;k--){
            cout<<k<<" ";
        }
        for(int j=0;j<2*i-1;j++){
            cout<<i<<" ";
        }
        for(int l = i+1;l<=n;l++){
            cout<<l<<" ";
        }





        cout<<endl;
    }    
    for(int i=1;i<n;i++){
        for(int j = n;j>i;j--){
            cout<<j<<" ";
        }

        for(int j =1;j<=2*i-1;j++){
            cout<<i+1<<" ";
        }

        for(int l = i+1;l<=n;l++){
            cout<<l<<" ";
        }
        cout<<endl;
    }
    return 0;
}
